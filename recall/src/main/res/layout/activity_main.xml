<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="horizontal" android:gravity="bottom"
        android:baselineAligned="false" android:backgroundTint="@color/colorBackgroundLight"
        android:background="@color/colorBackgroundLight">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">

        <TextView
                android:text="@string/placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_money"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:textColor="@color/colorBackgroundDark" android:fontFamily="sans-serif-black"/>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/fl_container"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent">

        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:layout_weight="0" android:gravity="bottom"
            android:background="@android:color/background_dark">
        <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@drawable/ic_baseline_adb_24px"
                android:id="@+id/ib_main"
                android:tint="@color/colorBackgroundDark"
                android:background="@color/colorBackgroundLight"
        />
        <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@drawable/ic_baseline_business_center_24px"
                android:id="@+id/ib_work"
                style="@style/Widget.AppCompat.ImageButton"
                android:tint="@color/colorBackgroundLight" android:background="@color/colorBackgroundDark"
        />
        <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@drawable/ic_baseline_fastfood_24px"
                android:id="@+id/ib_food"
                style="@style/Widget.AppCompat.ImageButton"
                android:tint="@color/colorBackgroundLight" android:background="@color/colorBackgroundDark"
        />
        <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@drawable/ic_baseline_shopping_cart_24px"
                android:id="@+id/ib_shop"
                style="@style/Widget.AppCompat.ImageButton"
                android:tint="@color/colorBackgroundLight" android:background="@color/colorBackgroundDark"
        />
        <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@drawable/ic_baseline_fitness_center_24px"
                android:id="@+id/ib_fitness"
                style="@style/Widget.AppCompat.ImageButton"
                android:tint="@color/colorBackgroundLight" android:background="@color/colorBackgroundDark"
        />
        <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@drawable/ic_baseline_drive_eta_24px"
                android:id="@+id/ib_cars"
                style="@style/Widget.AppCompat.ImageButton"
                android:tint="@color/colorBackgroundLight" android:background="@color/colorBackgroundDark"
        />
        <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@drawable/ic_baseline_location_city_24px"
                android:id="@+id/ib_locations"
                style="@style/Widget.AppCompat.ImageButton"
                android:tint="@color/colorBackgroundLight" android:background="@color/colorBackgroundDark"
        />
    </LinearLayout>
</LinearLayout>